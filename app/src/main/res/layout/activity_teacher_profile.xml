<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ui.TeacherProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:alpha="0.5"
            android:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/avatar" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/user_name_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Neha Roy"
                android:fontFamily="@font/droid_sans"
                android:textColor="#fff"
                android:textSize="16.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name_"
                android:layout_centerHorizontal="true"
                android:text="neha@gmail.com"
                android:fontFamily="@font/droid_sans"
                android:textColor="#fff"
                android:textSize="14.5sp" />

            <TextView
                android:id="@+id/city_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_"
                android:text="Nagpur"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/droid_sans"
                android:textColor="#fff"
                android:textSize="12sp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/teacher_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/profile_layout"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/droid_sans"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3.5sp"
                android:text="Logout"
                android:textSize="16.5sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/teacher_logout"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#A2A2A2" />
    </RelativeLayout>
</LinearLayout>